#include <stdio.h>
#include <string.h>

int main() {
    char str[1000];
    int l, length, flag = 0;

    printf("Enter the string to check: ");
    scanf("%s", str);

    length = strlen(str);

    for (l = 0; l < length / 2; l++) {
        if (str[l] != str[length - l - 1]) {
            flag = 1;
            break;
        }
    }

    if (flag)
        printf("%s is not a palindrome\n", str);
    else
        printf("%s is a palindrome\n", str);

    return 0;
}



#include <stdio.h>
#include <stdlib.h>


typedef struct {
    int size; 
    int capacity; 
    double *array; 
} Stack;


void push(Stack *stack, double item) {
    if (stack->size == stack->capacity) {
        stack->capacity *= 2; 
    }
        stack->array = realloc(stack->array, stack->capacity * sizeof(double)); 
    stack->array[stack->size++] = item;
}


int main() {
    Stack stack;
    stack.size = 0;
    stack.capacity = 2; 
    stack.array = (double*)malloc(stack.capacity * sizeof(double));

    push(&stack, 3.14);
    push(&stack, 2.71); 

   
    free(stack.array);

    return 0;
}
